{
  "name": "@portfolio/ui",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:tsc\" \"npm run dev:css\"",
    "dev:tsc": "tsc --watch",
    "dev:css": "tailwindcss -i src/globals.css -o dist/globals.css --watch --minify",
    "build": "npm run build:ui && npm bun build:css",
    "build:ui": "tsc -b",
    "build:css": "tailwindcss -i src/globals.css -o dist/globals.css --minify",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "dependencies": {
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "typescript": "^5"
  }
}
